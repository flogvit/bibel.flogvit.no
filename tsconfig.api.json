{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist-api",
    "rootDir": ".",
    "declaration": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "baseUrl": "."
  },
  "include": ["api/**/*.ts", "src/lib/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-api"]
}
